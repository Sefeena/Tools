<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pos_config_view_form_inherit_refund_butto" model="ir.ui.view">
            <field name="name">res.config.form.inherit.refund_button</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <div id="product_prices" position="after">
                   <div class="col-xs-12 col-lg-6 o_setting_box" >
                            <div class="o_setting_left_pane">
                                <field name="hide_refund_button" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="hide_refund_button"/>
                                <div class="text-muted">
                                    Hide Refund button for all customer
                                </div>
                                
                            </div>

                            <div class="o_setting_left_pane">
                                <field name="enable_refund_button_manager" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_refund_button_manager"/>
                                <div class="text-muted">
                                    Enable Refund button for Manager
                                </div>
                                
                            </div>
                        </div>
                </div>
            </field>
        </record>
</odoo>
